{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2016",
    "module": "AMD",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}