{
  "version": 2,
  "rewrites": [{
    "source": "/(.*)",
    "destination": "index.js"
  }],
  "buildCommand": "yarn run build",
  "outputDirectory": "public",
  "installCommand": "yarn install",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "github": {
    "enabled": false
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers" : [
        {
          "key" : "X-Content-Type-Options",
          "value" : "nosniff"
        },
        {
          "key" : "X-Frame-Options",
          "value" : "DENY"
        },
        {
          "key" : "X-XSS-Protection",
          "value" : "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "max-age=60, public, must-revalidate"
        }
      ]
    }
  ]
}